<h1>Weather request</h1>
<form action="/weather" method="POST">
  <label for="location">city: </label>
  <input type="text" name="location" value={{location}}>
  <label for="countryCode">country code: </label>
  <input type="text" name="countryCode" value={{countryCode}}>
<br>
<input type="checkbox" id="description" name="descriptioncb" checked>
<label for="description"> description</label><br>
<input type="checkbox" id="temperature" name="temperaturecb" checked>
<label for="temperature"> temperature</label><br>
<input type="checkbox" id="feels_like" name="feels_likecb" checked>
<label for="feels_like"> feels_like</label><br>
<input type="checkbox" id="sunrisesunset" name="sunrisesunsetcb" checked>
<label for="sunrisesunset"> sunrise / sunset</label><br>
{{!-- <input type="checkbox" id="sunset" name="sunsetcb" checked>
<label for="sunset"> sunset</label><br> --}}
<br>

  <input type="submit" value="submit" />
</form>

{{#if err}}
  <h2>{{err}}</h2>
{{/if}}
{{#if displayWeather}}
  <h2>weather Today's weather in {{name}}:</h2>
  <ul>
    {{#each data}}
     {{#if this}}
      <li>{{@key}} : {{this}}</li>
     {{/if}}
    {{/each}}
  </ul>
  {{#if sunrisesunsetcb}}
  <p>Sunrise - {{sunrise}} </p><p>Sunset - {{sunset}}</p>
  {{/if}}
{{/if}}